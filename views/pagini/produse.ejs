<!DOCTYPE html>
<html  lang="ro">
    <head>
        <meta name="keywords" content="bijuterii, aur, argint, coliere, inele, cercei, bratari, cadouri, accesorii">
        <meta name="description" content="Descopera colectia noastra de bijuterii din aur si argint. Accesorii perfecte pentru orice ocazie!">
        <link rel="stylesheet" href="/resurse/css/produse.css" type="text/css" />
        <title>Lumière Bijoux - home</title>
        <%- include("../fragmente/head") %>     
        <!-- <script type="text/javascript" src=/resurse/js/produse.js></script> -->
        <script type="text/javascript" src=/resurse/js/produse-cos.js></script>
        <script src="/resurse/js/comparare.js"></script>
        <script src="/resurse/js/produse.js"></script>

        <!-- BOOTSTRAP -->
        <link rel="stylesheet" href="/resurse/css/customizare_bootstrap.css" type="text/css" />

    </head>

    <body>

    <%- include("../fragmente/header") %>

    <main>
        <div class = "container">
            <div class="row g-3">
                <!-- Pe ecrane mici (xs), ocupă tot rândul (12 coloane)
                Pe medii ocupă jumătate din rând (6 coloane)
                Pe mari ocupă o treime din rând (4 coloane) -->

                <!-- Coloana 1: Nume -->
                 <div class="col-12 col-md-6 col-lg-2">
                    <label for="inp-nume" class="form-label">Nume:</label>
                    <input type="text" id="inp-nume" class="form-control">
                </div>

                <!-- Coloana 2: Gramaj -->
                <div class="col-12 col-md-6 col-lg-2">
                    <label for="inp-gramaj" class="form-label">Gramaj:</label>
                        <span id = "val-min-gramaj">0g</span>
                            <input type="range" id="inp-gramaj" class="form-range" min="0" max="100" step = "1" value="0">
                        <span id="val-max-gramaj">100g <span id = "val-curenta-gramaj"> </span></span>
                </div>

                <!-- Coloana 3: Pret -->
                <div class="col-12 col-md-6 col-lg-2">
                    <label for="inp-pret" class="form-label">Pret:</label>
                    <div class="btn-group d-flex flex-wrap" role="group">
                        
                        <input type="checkbox" class="btn-check" name="pret" id="pret1" value="0:200" autocomplete="off">
                            <label class="btn btn-outline-secondary" for="pret1">Mic (&lt; 200 lei)</label>

                        <input type="checkbox" class="btn-check" name="pret" id="pret2" value="200:600" autocomplete="off">
                            <label class="btn btn-outline-secondary" for="pret2">Mediu (200–600 lei)</label>

                        <input type="checkbox" class="btn-check" name="pret" id="pret3" value="600:1000" autocomplete="off">
                            <label class="btn btn-outline-secondary" for="pret3">Mare (600–1000 lei)</label>
                    </div>
                </div>

                <!-- Coloana 4: Select simplu -->
                <div class="col-12 col-md-6 col-lg-2">
                    <label for="inp-categorie" class="form-label">Categorie:</label>
                    <select id="inp-categorie" class="form-select">
                    <option id="sel-toate" selected value="toate">toate</option>
                    <% for (let opt of locals.optiuni) { %>
                        <option value="<%- opt.unnest %>"><%- opt.unnest %></option>
                    <% } %>
                    </select>
                </div>

                <!-- Coloana 5: Material DATALIST-->
                <div class="col-12 col-md-6 col-lg-2">
                    <label for="inp-material" class="form-label">Material:</label>
                    <input list="lista-materiale" id="inp-material" class="form-control">
                    <datalist id="lista-materiale">
                        <option value="Aur alb 18K">
                        <option value="Argint 925">
                        <option value="Aur14K">
                        <option value="Otel inoxidabil">
                    </datalist>
                </div>

                <!-- Coloana 6: Select multiplu -->
                <!-- <div class="col-12 col-md-6 col-lg-3">
                    <label for="inp-pietre" class="form-label">Pietre pretioase:</label>
                    <select id="inp-pietre" multiple>
                        <option value = "zirconiu">Zirconiu</option>
                        <option value = "topaz">Topaz</option>
                        <option value = "perla">Perla</option>
                        <option value = "ametist">Ametist</option>
                        <option value = "cuart roz">Cuart roz</option>
                    </select>
                </div> -->

                <!-- Coloana 6: Personalizabila  -->
                <!-- <div class="col-12 col-md-6 col-lg-3">
                    <label for="inp-personalizabil" class="form-label">Personalizabila:</label>
                    <div class="btn-group d-flex flex-wrap" role="group">
                        
                        <input type="radio" class="btn-check" name="personalizabil" id="personalizabil-da" value="true">
                        <label class="btn btn-outline-secondary" for="i_rad1">Da</label>

                        <input type="radio" class="btn-check" name="personalizabil" id="personalizabil-nu" value="false">
                        <label class="btn btn-outline-secondary" for="i_rad2">Nu</label>

                        <input type="radio" class="btn-check" name="personalizabil" id="personalizabil-toate" value="toate" checked>
                        <label class="btn btn-outline-secondary" for="i_rad4">Toate</label>
                    </div>
                </div> -->



                <!-- Butoane -->
                <div class="col-12 col-md-12 col-lg-8">
                    <button id="filtrare" class="btn btn-primary btn-sm me-2">
                    <i class="bi bi-funnel"></i> <span class="d-none d-sm-inline">Filtreaza</span>
                    </button>
                    <button id="resetare" class="btn btn-secondary btn-sm me-2">
                    <i class="bi bi-arrow-counterclockwise"></i> <span class="d-none d-sm-inline">Reseteaza</span>
                    </button>
                    <button id="sortCrescNume" class="btn btn-success btn-sm me-2">
                    <i class="bi bi-sort-alpha-down"></i> <span class="d-none d-sm-inline">Sortează crescător</span>
                    </button>
                    <button id="sortDescrescNume" class="btn btn-success btn-sm">
                    <i class="bi bi-sort-alpha-down-alt"></i> <span class="d-none d-sm-inline">Sortează descrescător</span>
                    </button>
                    <button id="btn-minim" class="btn btn-warning btn-sm">
                        <i class="bi bi-cash-coin"></i> <span class="d-none d-sm-inline">Cel mai mic preț</span>
                    </button>
                </div>

            </div>
        </div>
      
        <p id="p-suma">Apăsați Alt+"c" pentru suma preturilor produselor afișate. </p>
  
        <section id="produse">
            <h2>Produse</h2>
            <div class="grid-produse">
                <% for( let prod of locals.produse) { %>

                    <article class="produs" >
                        <h3 class="nume">Nume: <a href="/produs/<%-prod.id %>" ><span class="val-nume"><%- prod.nume%></span></a></h3>
                        
                        <div class="info-prod">
                            <p class="pret">Pret: <span class="val-pret"><%- prod.pret%></span></p>
                            <p class="material">Material: <span class="val-material"><%- prod.material_principal%></span></p>
                            <p class="gramaj">Gramaj: <span class="val-gramaj"><%- prod.gramaj%></span></p>
                        </div>

                        <p class="categorie">Categorie:<span class="val-categorie"><%- prod.categorie%></span></p>
                        
                        <figure>
                            <a href="/produs/<%-prod.id %>" ><img src="/resurse/imagini/produse/<%- prod.imagine %>" style="width:50%;height:auto;" alt="[imagine <%- prod.nume %>]" /></a>
                        </figure>

                        <label class="selecteaza-cos">
                            Selecteaza:<br/>
                            <input type="checkbox" class="select-cos" value="<%-prod.id %>" autocomplete="off">
                        </label>

                        <button 
                            class="btn btn-info btn-compara mt-2" 
                            data-nume="<%- prod.nume %>"
                            data-pret="<%- prod.pret %>"
                            data-material="<%- prod.material_principal %>"
                            data-gramaj="<%- prod.gramaj %>"
                            data-categorie="<%- prod.categorie %>" >Compara
                        </button>

                    </article>
                <% }%>
            </div>

        
          
        <!--  paginare  -->
        <div id="paginare" class="my-3 d-flex justify-content-center">
            <button class="btn btn-outline-primary mx-1" onclick="afiseazaPagina(1)">1</button>
            <button class="btn btn-outline-primary mx-1" onclick="afiseazaPagina(2)">2</button>
            <button class="btn btn-outline-primary mx-1" onclick="afiseazaPagina(3)">3</button>
        </div>
        </section>



        <!-- input de tip textArea cu floating label -->
        <div class="form-floating mb-3">   <!-- clasa bootstrap -->
        <textarea class="form-control" placeholder="Scrie un mesaj..." id="textarea-mesaj" style="height: 100px"></textarea>
        <label for="textarea-mesaj">Mesaj</label>
        </div>

    </main>

    <%- include("../fragmente/footer") %>
    </body>
</html>